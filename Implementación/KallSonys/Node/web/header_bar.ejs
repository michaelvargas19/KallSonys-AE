<div class="header">
    <div class="header-top-strip">
        <div class="container">
            <div class="header-top-left">
                <% if(locals.user && locals.user.length >0) {%>
                    <ul>
                        <li>Iniciaste sesión como <b><%= user %></b></li>
                        <li>|</li>
                        <li><a href="/signout">Sign out</a></li>
                        <li>|</li>
                        <li><a href="/mispedidos">Mis pedidos</a></li>
                    </ul>
                <% }else{ %>
                <div id="sign-in-social-media" style="display: none;">
                    <ul>
                        <!-- <li><i class="fa fa-facebook-square fa-2x"></i></li> -->
                        <li>Iniciar sesión:</li>
                        <li><i class="fa fa-facebook-square"></i></li>
                        <li>
                            <a id="sig" href="javascript:test()"><i class="fa fa-google"></i></a>
                            <div id="gsi" style="display: none; position: absolute;">
                                <div class="g-signin2" data-onsuccess="onSignIn"></div>
                            </div>
                        </li>
                        <li><a href="/account"><span class="glyphicon glyphicon-user"> </span></a></li>
                        <li>|</li>
                        <li><a href="/register"><span class="glyphicon glyphicon-lock"> </span>Crear una cuenta</a>
                        </li>
                        
                    </ul>
                </div>
                <% } %>
                <div id="sign-out-social-media"></div>
            </div>
            <div class="header-right">
                <div class="cart box_1">
                    <a href="/checkout">
                        <h3> <span class="simpleCart_total"> $0.00 </span> (<span id="simpleCart_quantity"
                                class="simpleCart_quantity"> 0 </span>)</h3>
                    </a>
                    <p><a href="javascript:;" class="simpleCart_empty"><i class="fa fa-shopping-cart"></i>
                        Vaciar carrito</a></p>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>